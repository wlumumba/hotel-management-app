<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="323.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.customerHomeController">
   <children>
      <TabPane prefHeight="328.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Create Reservation">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab text="Edit Reservation">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Cancel Reservation">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
            <Tab text="Edit Account Info">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="editUsername" layoutX="64.0" layoutY="100.0" />
                        <TextField fx:id="editFirstName" layoutX="64.0" layoutY="137.0" />
                        <TextField fx:id="editLastName" layoutX="64.0" layoutY="179.0" />
                        <TextField fx:id="editPassword" layoutX="64.0" layoutY="216.0" />
                        <TextField fx:id="userEmailEdit" layoutX="64.0" layoutY="47.0" />
                        <Button fx:id="editAccountButton" layoutX="234.0" layoutY="47.0" mnemonicParsing="false" onAction="#editAccountButtonClicked" text="edit" />
                        <Label layoutX="64.0" layoutY="23.0" text="Enter Email to edit user info" />
                        <Button fx:id="submitAccEditButton" layoutX="87.0" layoutY="252.0" mnemonicParsing="false" onAction="#submitAccEditButtonClicked" text="Submit Changes" />
                        <Label layoutX="225.0" layoutY="104.0" text="user name" />
                        <Label layoutX="225.0" layoutY="141.0" text="first name" />
                        <Label layoutX="225.0" layoutY="183.0" text="last name" />
                        <Label layoutX="224.0" layoutY="220.0" prefHeight="17.0" prefWidth="57.0" text="password" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Logout">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="335.0" prefWidth="654.0">
                     <children>
                        <Button fx:id="customerLogoutButton" layoutX="434.0" layoutY="70.0" mnemonicParsing="false" onAction="#customerLogoutButtonClicked" prefHeight="27.0" prefWidth="77.0" text="Logout">
                           <font>
                              <Font name="Georgia" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
